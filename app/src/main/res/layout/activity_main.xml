<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.simon.list.MainActivity">
    <!--android:background="#FFFFFFFF"-->


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/List"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        android:background="@android:drawable/ic_menu_sort_by_size" />




    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:visibility="gone"
        android:layout_below="@+id/List"
        android:layout_above="@+id/confirm" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/confirm"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:background="@android:drawable/ic_media_play" />


    <com.example.simon.list.ScaleImage
        android:id="@+id/alittlewaterbottle"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@mipmap/alittlewaterbottle"
        android:visibility="gone"
        android:layout_alignParentEnd="false" />


    <com.example.simon.list.ScaleImage
        android:id="@+id/badligjtbottle"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@mipmap/alittlelightbottletest"
        android:visibility="gone"
        android:layout_below="@+id/List"
        android:layout_alignParentStart="true"
        />

    <com.example.simon.list.ScaleImage
        android:id="@+id/normalengine"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@mipmap/normalengine"
        android:visibility="gone"
        android:layout_below="@+id/badligjtbottle"
        android:layout_alignParentStart="true" />

    <com.example.simon.list.ScaleImage
        android:id="@+id/ic_launcher"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone"
        android:layout_below="@+id/normalengine"
        android:layout_alignParentStart="true"/>

    <com.example.simon.list.ScaleImage
        android:id="@+id/dlightbad"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@mipmap/dlightbad"
        android:visibility="gone"
        android:layout_below="@+id/ic_launcher"
        android:layout_alignParentStart="true"/>

    <com.example.simon.list.ScaleImage
        android:id="@+id/frontlightbad"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@mipmap/frontlightbad"
        android:visibility="gone"
        android:layout_below="@+id/dlightbad"
        android:layout_alignParentStart="true"/>

    <com.example.simon.list.ScaleImage
        android:id="@+id/fflightgood"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@mipmap/fflightgood"
        android:visibility="gone"
        android:layout_below="@+id/frontlightbad"
        android:layout_alignParentStart="true"/>

    <com.example.simon.list.ScaleImage
        android:id="@+id/blightgood"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@mipmap/blightgood"
        android:visibility="gone"
        android:layout_below="@+id/fflightgood"
        android:layout_alignParentStart="true"/>

    <com.example.simon.list.ScaleImage
        android:id="@+id/toolongtime"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@mipmap/toolongtime"
        android:visibility="gone"
        android:layout_below="@+id/blightgood"
        android:layout_alignParentStart="true"/>

    <com.example.simon.list.ScaleImage
        android:id="@+id/alittleoil"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@mipmap/alittleoil"
        android:visibility="gone"
        android:layout_below="@+id/toolongtime"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
