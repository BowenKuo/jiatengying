<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/maintain_history_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:elevation="1dp"
        android:padding="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="錯誤碼"
        android:id="@+id/ecid"
        android:layout_alignParentStart="true"
        android:paddingStart="15dp"
        android:paddingTop="10dp"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:layout_alignParentLeft="true"
        android:paddingLeft="15dp"
        android:textColor="@android:color/primary_text_light"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="錯誤碼資訊"
        android:id="@+id/ecinfo"
        android:paddingStart="15dp"
        android:minHeight="34dp"
        android:textSize="15sp"
        android:gravity="center_vertical"
        android:paddingTop="2dp"
        android:paddingLeft="15dp"
        android:textColor="@color/background_floating_material_dark"
        android:layout_below="@+id/ecid"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="錯誤發生時間"
        android:id="@+id/ectime"
        android:drawableStart="@drawable/ic_access_time_black_18dp"
        android:paddingStart="15dp"
        android:minHeight="34dp"
        android:textSize="15sp"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:textColor="@color/background_floating_material_dark"
        android:layout_alignBaseline="@+id/ecid"
        android:layout_alignBottom="@+id/ecid"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp" />
    </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>