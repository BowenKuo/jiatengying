<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="錯誤碼"
        android:textSize="25dp"
        android:id="@+id/ErrorCode"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="14dp"
        android:textStyle="bold"
        android:textColor="#1e6a4d"
        android:layout_marginStart="14dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/location"
        android:layout_alignStart="@+id/location" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/info_comment_label"
        android:id="@+id/info_comment_label"
        android:textSize="12sp"
        android:minHeight="30dp"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="@android:color/black"
        android:background="@color/color_white"
        android:elevation="1dp"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/ErrorInfo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/comment_recycler_view"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/info_comment_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="錯誤碼資訊"
        android:paddingLeft="5dp"
        android:textSize="20dp"
        android:layout_column="2"
        android:id="@+id/ErrorInfo"
        android:layout_below="@+id/ErrorCode"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp" />

    <android.support.design.widget.FloatingActionButton
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_mode_edit_white_24dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        app:fabSize="normal"
        app:rippleColor="@color/colorAccentDark"/>


</RelativeLayout>